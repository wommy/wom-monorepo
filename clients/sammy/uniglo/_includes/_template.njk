		<!-- Copy Link Functionality  -->
		<script>
			function copyLink() {
				const copyLinkNotice = document.getElementById('share-text')
				navigator.clipboard.writeText('https://uniglobalunion-surveys.org/')
				copyLinkNotice.innerHTML = 'Survey link copied'
				//copyLinkNotice.style.display = 'block';
				setTimeout(function () {
					// start a delay

					copyLinkNotice.style.opacity = 1 // set opacity for the element to 1
					var timerId = setInterval(function () {
						// start interval loop
						var opacity = copyLinkNotice.style.opacity // get current opacity
						if (opacity <= 0) {
							// check if its 0 yet
							clearInterval(timerId) // if so, exit from interval loop
						} else {
							copyLinkNotice.style.opacity = opacity - 0.03 // else remove 0.05 from opacity
						}
					}, 30) // run every 0.1 second
				}, 30) // wait to run after 1 seconds
			}

			function showSocialText(buttonId) {
				const shareText = document.getElementById('share-text')

				if (buttonId.toString().includes('link')) {
					shareText.innerHTML = buttonId
				} else {
					shareText.innerHTML = 'Share on ' + buttonId
				}
				shareText.style.opacity = 1
			}

			function hideSocialText() {
				const shareText = document.getElementById('share-text')
				shareText.innerHTML = ''
				shareText.style.opacity = 0
			}
		</script>
